type User {
    id: ID!
    firstName: String!
    lastName: String!
    email: String
    phoneNumber: String
    firstLogin: Boolean!
    locations: [Location]!
}

extend type Query {
    user: User
    users: [User]!
}

input UserInput {
    firstName: String!
    lastName: String!
    email: String
}

extend type Mutation {
    updateUser(input: UserInput): User
    savePushToken(pushToken: String): ID
}