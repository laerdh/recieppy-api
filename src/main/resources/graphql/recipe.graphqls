type Recipe {
    id: ID!
    title: String!
    url: String
    imageUrl: String
    site: String
    tags: [Tag]
}

type Query {
    recipes(locationId: ID!): [Recipe!]!
}

input RecipeInput {
    title: String!
    url: String
    imageUrl: String
    site: String
    recipeListId: ID!
    tags: [ID]
}

type Mutation {
    newRecipe(input: RecipeInput): Recipe
    deleteRecipe(id: ID!): ID!
}